<div class="container">
        <div class="row">
            <div class="col ">
                <h1 class="text-center">I <img src="../public/assets/images-and-gifs/moustache.png" class="moustache">
                    You To
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="col pb-2">
                <img src="../public/assets/images-and-gifs/burger.png" class="burger">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h1 class="text-center">Eat Da Burger!</h1>
            </div>
        </div>
        <div class="row mt-3 mb-3">
            <div class="col-md-6">
                <ul class="list-group list-group-flush rounded">
                    <!-- insert for each here -->
                    {{#each uneaten}}
                    <li class="list-group-item">{{this.id}}. {{this.burger_name}}                      <button type="button" class="btn btn-warning float-right eat-burg" data-eatid="{{this.id}}">Devour It!</button>
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-6">
                <!-- insert for each here -->
                <ul class="list-group list-group-flush rounded">
                    {{#each eaten}}
                    <li class="list-group-item">{{this.id}}. {{this.burger_name}}
                        <div class="btn-group float-right" role="group">
                            <button type="button" class="btn btn-success again-burg" data-againid="{{this.id}}">Eat Another?</button>
                            <button type="button" class="btn btn-danger del-burg" data-delid="{{this.id}}">Digest!</button>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <form class="input-group mb-3" id="addburg">
                    <input type="text" class="form-control" placeholder="Add a burger to eat"
                        aria-label="Add a burger to eat" name="add-burg">
                    <div class="input-group-append">
                        <button class="btn btn-success add-burg" type="submit" id="button-addon2">Add It!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="../public/assets/scripts/burgers.js"></script>